<body>
<h1>Editing Book</h1>
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>

 <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show","/books/#{@book.id}"%>|
<%= link_to "Back","/books"%>

</body>